{
  "name": "ionic-wizard",
  "version": "1.0.1",
  "description": "A set of Angular/Ionic directives to create a wizard using Ionic slide box component",
  "repository": "https://github.com/arielfaur/ionic-wizard",
  "license": "MIT",
  "devDependencies": {
    "karma": "~0.12",
    "http-server": "^0.6.1",
    "bower": "^1.3.1",
    "shelljs": "^0.2.6",
    "karma-junit-reporter": "^0.2.2"
  },
  "scripts": {
